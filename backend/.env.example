# Environment Configuration
ENVIRONMENT=development

# Project Configuration
PROJECT_NAME=YourAppName

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/your_app_db

# Security
# ⚠️ IMPORTANT: Generate a secure random secret key (minimum 32 characters)
# Use: openssl rand -hex 32 or python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# CORS Configuration
# Set FRONTEND_URL for single origin, or CORS_ORIGINS for multiple origins (comma-separated or JSON array)
FRONTEND_URL=http://localhost:3000
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Or use JSON array format: CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# OAuth
# ⚠️ IMPORTANT: Replace with your actual Google OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0

# SendGrid Email Configuration
# ⚠️ IMPORTANT: Replace with your actual SendGrid API key
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=${PROJECT_NAME}

# Stripe Configuration
# ⚠️ IMPORTANT: Replace with your actual Stripe credentials
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Database Connection Pool (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Mailchimp (optional - for Montreal microsite signup)
# Get your Audience/List ID from Mailchimp: Audience → Settings → Audience name and defaults
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=

# Bootstrap Superadmin (optional, for initial setup only)
# Set this to bootstrap the first superadmin user via /api/v1/admin/bootstrap-superadmin
# After first superadmin is created, this endpoint will be disabled
# ⚠️ IMPORTANT: Generate a secure random key: openssl rand -hex 32
BOOTSTRAP_SUPERADMIN_KEY=
