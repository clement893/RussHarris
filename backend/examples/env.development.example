# Development Environment Configuration
# Copy this file to .env and customize for your development setup

# ============================================
# PROJECT CONFIGURATION
# ============================================
PROJECT_NAME=My App (Development)
ENVIRONMENT=development
DEBUG=True
VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================
# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mydb_dev

# Database pool configuration (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# SECURITY CONFIGURATION (Required)
# ============================================
# Generate a strong secret key (min 32 characters)
# Use: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-this-to-random-32-plus-characters

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60  # Longer for development
REFRESH_TOKEN_EXPIRE_DAYS=90     # Longer for development

# ============================================
# CORS CONFIGURATION (Required)
# ============================================
# Frontend URL(s) - comma-separated for multiple origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Base URL for OAuth callbacks (optional, auto-detected if empty)
BASE_URL=

# ============================================
# FEATURE FLAGS (Development)
# ============================================
# Disable CSRF for easier development (NOT for production!)
DISABLE_CSRF=true

# Disable rate limiting for easier development (NOT for production!)
DISABLE_RATE_LIMITING=true

# Enable request signing (optional)
ENABLE_REQUEST_SIGNING=false

# ============================================
# OAUTH CONFIGURATION (Optional)
# ============================================
# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# PAYMENT PROCESSING (Optional - Stripe)
# ============================================
# Stripe Test Keys (for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# EMAIL CONFIGURATION (Optional - SendGrid)
# ============================================
# SendGrid API Key (if using email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@example.com

# ============================================
# FILE STORAGE (Optional - AWS S3)
# ============================================
# AWS S3 Configuration (if using file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name-dev

# ============================================
# CACHING (Optional - Redis)
# ============================================
# Redis URL (if using caching)
# Format: redis://host:port/db or redis://:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# ============================================
# AI PROVIDERS (Optional)
# ============================================
# OpenAI (if using AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (if using Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# MULTI-TENANCY (Optional)
# ============================================
# Tenancy mode: 'single', 'multi', 'hybrid'
TENANCY_MODE=single

# ============================================
# LOGGING (Optional)
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# ============================================
# SERVER CONFIGURATION
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# NOTES
# ============================================
# 1. Never commit .env files to version control
# 2. Generate strong SECRET_KEY for production
# 3. Use test keys for Stripe in development
# 4. All optional services can be omitted if not used
# 5. Database is required - set DATABASE_URL

