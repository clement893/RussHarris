{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom", "node", "react", "react-dom"],
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "vitest.d.ts"
  ],
  "exclude": []
}

