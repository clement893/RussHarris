{
  "name": "modele-nextjs-fullstack",
  "version": "1.0.0",
  "description": "Full-stack template with Next.js 16 frontend and FastAPI backend",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:full": "node scripts/dev.js",
    "dev:frontend": "node scripts/dev.js --frontend-only",
    "dev:backend": "node scripts/dev.js --backend-only",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "pre-commit": "node scripts/pre-commit.js",
    "pre-commit:skip-tests": "node scripts/pre-commit.js --skip-tests",
    "check": "node scripts/check.js",
    "check:fix": "node scripts/check.js --fix",
    "setup:hooks": "node scripts/setup-hooks.js",
    "generate:component": "node scripts/generate-component.js",
    "generate:page": "node scripts/generate-page.js",
    "generate:api": "node scripts/generate-api-route.js",
    "migrate": "node scripts/migrate-db.js"
  },
  "workspaces": [
    "apps/*",
    "backend",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  }
}
